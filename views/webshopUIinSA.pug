doctype html
html
  head
    title= 'Webshops in SA'
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet")
  body
    main.container.flex
      block content
        h1.breatheSmall Webshop viðmót í SA
        div.main.container
          div.flexRow.breathe
            div.flex
              button.btn.getWebshopsButton Ná í vefverslanir
          div.row
            div.flex
              ol.birtaVefverslanir
          div.flex.breathe
            div.flex
              h2 Vefverslun
              div.row.breatheSmall
                div.col-md-6
                  button.btn.generateKeyButton Generate API key
                div.col-md-6
                  button.btn.showKeyButton Show API key
              div.row
                div.col-md-6.showNewlyGenerated
                div.col-md-6.showKeyFromDB
            div
              button.btn.getWebshopSettingsButton Ná í stillingar
            div.flex
              h3 Delivery methods:
            div.row.breathe
              div.col-md-2.deliveryMethod0
                h4.deliveryMethod0Header
                label= 'Is enabled: '
                  input(type="checkbox").deliveryMethod0Enabled
                br
                label= 'Nota verðskrá ÍP: '
                  input(type="checkbox").deliveryMethod0UseDefaultPrice
                br
                span.deliveryMethod0Price= 'Custom price: '
                input(type="number").deliveryMethod0CustomPrice
                br
              div.col-md-2.deliveryMethod1
                h4.deliveryMethod1Header
                label= 'Is enabled: '
                  input(type="checkbox").deliveryMethod1Enabled
                br
                label= 'Nota verðskrá ÍP: '
                  input(type="checkbox").deliveryMethod1UseDefaultPrice
                br
                span.deliveryMethod1Price= 'Custom price: '
                input(type="number").deliveryMethod1CustomPrice
                br
              div.col-md-2.deliveryMethod2
                h4.deliveryMethod2Header
                label= 'Is enabled: '
                  input(type="checkbox").deliveryMethod2Enabled
                br
                label= 'Nota verðskrá ÍP: '
                  input(type="checkbox").deliveryMethod2UseDefaultPrice
                br
                span.deliveryMethod2Price= 'Custom price: '
                input(type="number").deliveryMethod2CustomPrice
                br
              div.col-md-2.deliveryMethod3
                h4.deliveryMethod3Header
                label= 'Is enabled: '
                  input(type="checkbox").deliveryMethod3Enabled
                br
                label= 'Nota verðskrá ÍP: '
                  input(type="checkbox").deliveryMethod3UseDefaultPrice
                br
                span.deliveryMethod3Price= 'Custom price: '
                input(type="number").deliveryMethod3CustomPrice
                br
              div.col-md-2.deliveryMethod4
                h4.deliveryMethod4Header
                label= 'Is enabled: '
                  input(type="checkbox").deliveryMethod4Enabled
                br
                label= 'Nota verðskrá ÍP: '
                  input(type="checkbox").deliveryMethod4UseDefaultPrice
                br
                span.deliveryMethod4Price= 'Custom price: '
                input(type="number").deliveryMethod4CustomPrice
                br
            div
              button.btn.saveButton Vista stillingar
              
              
  script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
  script(src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js")
  script(src="javascripts/mock_sa_webshop_ui.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/js/bootstrap.min.js")
